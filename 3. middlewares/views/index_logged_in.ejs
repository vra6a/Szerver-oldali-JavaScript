<%- include('header') -%>
<%-include('logged_in_navbar') -%>

	<div class="landing-image">
		<div class="hero-text">
			FESTICKET
		</div>
	</div>


	<section class="box">
		<section id="festival" class="wrapper">
			<div class="cim">Fesztiválok</div>
			<div class="table">
				<table cellpadding="0" cellspacing="0">
					<tr class="table-header-line">
						<th width="30%">NÉV</th>
						<th width="20%">DÁTUM</th>
						<th width="20%">HELYSZÍN</th>
						<th width="30%">JEGYEK</th >
					</tr>
					<% festivalList.forEach(function(festival) { %>
					<tr>
						<th>
							<%= festival.nev  %>
						</th>
						<th>
							<%= festival.datum  %>
						</th>
						<th>
							<%= festival.helyszin  %>
						</th>
						<th>
							<div class="ticket-container" >
								<div class="options"><a href="/tickets/<%= festival._id %>/admin"> <img src="source/images/gear.png" height="30px" width="30px"></a></div>
								<div class="delete"><a href=""><img src="source/images/delete.png" height="30px" width="30px"></a></div>
							</div>
						</th >
					</tr>
					
				</table>
			</div>
			<div class="add-button"><a  href="/festivals/new">Új Fesztivál hozzáadása</a></div>
		</section>
	</section>
<%-include('footer') -%>
