<%- include('header', csstype="jegyek") -%>
<%-include('navbar') -%>

    <section class="box">
        <section id="festival" class="wrapper">
            <div class="cim"> Jegytipusok </div>
            <div class="table">
                <table cellpadding="0" cellspacing="0">
                    <tr class="table-header-line">
                        <th width="30%">JEGYTÍPUS</th>
                        <th width="20%">ÁR</th>
                        <th width="20%">ÉRVÉNYESSÉG</th>
                        <th width="30%"></th >
                    </tr>
                    <% tickets.forEach(function(ticket) { %>
                    <tr>
                        <th>
                            <%= ticket.tipus %>
                        </th>
                        <th>
                            <%= ticket.ar %>
                        </th>
                        <th>
                            <%= ticket.valid %>

                        </th>
                        <th>
                            <% if(!belepve) { %>
                                <div class="check"><a class="goto-festival-button" href="/festivals">Kosárba</a></div>
                            <% }else { %>
                                <div class="options"><a href="/tickets/<%= ticket._id %>/edit"> <img src="/source/images/gear.png" height="30px" width="30px"></a></div>
                                <div class="delete"><a href="/tickets/<%= ticket._id %>/delete"><img src="/source/images/delete.png" height="30px" width="30px"></a></div>
                                <div class="check"><a class="goto-festival-button" href="/festivals">Kosárba</a></div>
                            <%} %>
                        </th >
                    </tr>
                    <% }); %>
                </table>
            </div>
            <% if(!belepve) { %>
                <div class="add-button"><a  href="/tickets/<%= festivalid %>/new">Új Jegy hozzáadása</a></div>
            <%} %>
        </section>
    </section>
<%-include('footer') -%>
